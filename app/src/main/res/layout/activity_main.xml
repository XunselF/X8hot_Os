<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="X8hot_Os"
        app:titleTextColor="#fff"
        app:subtitleTextColor="#fff"/>
<FrameLayout
    android:id="@+id/main_frameLayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e9e9e9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="adjustPan|stateHidden"
        android:padding="10dp"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/boxs_main"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/boxs_image"
                android:src="@drawable/box_fragment_src"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/boxs_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="纸箱"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/workOrder_main"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/workOrder_image"
                android:src="@drawable/ic_dns_black_48dp"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/workOrder_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="工单"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
